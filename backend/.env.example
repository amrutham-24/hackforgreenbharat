# Database (SQLite for local dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./esg.db

# Redis (leave empty to use mock)
REDIS_URL=

# JWT
JWT_SECRET_KEY=change-me-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-5-nano
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Pinecone (leave empty to use local vector store)
PINECONE_API_KEY=
PINECONE_INDEX=esg-rag
PINECONE_ENVIRONMENT=us-east-1

# Alerts
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_FROM=alerts@greenbharat.ai

# App
APP_ENV=development
CORS_ORIGINS=http://localhost:3000
INTERNAL_API_KEY=change-me-internal-key
